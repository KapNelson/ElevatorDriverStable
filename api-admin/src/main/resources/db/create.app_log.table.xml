<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd


                                       http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd"
                   logicalFilePath="create.app_log.table.xml">
    <changeSet author="YevgenyV" id="initial creating table app_logs" context="all">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="app_log"/>
            </not>
        </preConditions>
        <createTable tableName="app_log">
            <column name="id_log"  type="int" autoIncrement="true">
                <constraints nullable="false"
                             primaryKey="true"/>
            </column>
            <column name="body_log" type="text">
                <constraints nullable="false" />
            </column>
            <column name="date_log" type="datetime">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>